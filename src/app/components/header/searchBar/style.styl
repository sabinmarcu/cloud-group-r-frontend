@import "../../_variables"

rad=5px
.container
    marg=15px
    display block
    border-radius rad
    box-shadow 0 3px 5px rgba(black, 0.2)
    background white
    height s("calc(%s - %s)", hundred, marg)
    margin (marg / 2) 0
    min-width 500px
    border solid 1px #eee

.input, .filter
    height 100%
    display inline-block
    margin 0
    padding 0
    position relative
    transform translate3D(0, 0, 0)
    
.input
    border-top-left-radius rad
    border-bottom-left-radius rad
    width 100%
    .inputElem
        width 100%
        height 100%
        border none
        text-indent 15px
        outline none
    