@import "../_variables"

.appwrapper
    width 100%
    height 100%
    overflow hidden
    background #ccc
    display flex
    position relative
    align-items center
    justify-content center
    
.header
    position fixed
    top 0
    left 0
    right 0
    height headerh
    background white
    box-shadow 0 2px 5px rgba(black, 0.2)
    z-index 99999
    
.content
    position absolute
    top headerh
    left 0
    right 0
    bottom 0
    display flex
    align-items center
    justify-items center
    justify-content center
    overflow auto