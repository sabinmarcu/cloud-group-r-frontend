@import "_variables"

html, body
    margin 0
    height 0
    width 100%
    height 100%
    font-family Lato, Open Sans, Roboto, Arial, Helvetica Neue, Helvetica, sans-serif;
    font-size 10pt
    & > div:global(#ApplicationWrapper), & > div:global(#ApplicationWrapper) > div
        width 100%
        height 100%
        overflow hidden
        position relative
        transform translate3d(0, 0, 0)
    &, *
        box-sizing border-box
        
a
    display inline-block
    text-decoration none
    color cdarkblue
    cursor pointer
    transition color 0.5s mdtiming
    text-shadow 0 1px 1px white
    &:hover
        color cblue